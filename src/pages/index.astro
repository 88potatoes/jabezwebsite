<!DOCTYPE html>
<html lang="en" class="h-100 w-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/bs_css.css">

    <title>JY Support Services</title>
    <style>
        html {
            cursor: none;
        }

        a {
            cursor: none;
        }
    </style>
</head>
<body class="bg-white h-100 w-100 d-flex flex-column align-items-center justify-content-center position-relative">
    <div id="cursor"></div>

    <div class="w-75 h-75 d-flex bg-secondary flex-column justify-content-center align-items-center shadow">
        <h1 class="bg-light shadow">JY</h1>
        <nav>

            <div class="bg-light shadow"><a href="/services" class="nav-link"><h2>Services</h2></a></div>
            <div class="bg-light shadow"><a href="/about" class="nav-link"><h2>About</h2></a></div>
            <div class="bg-light shadow"><a href="/contact" class="nav-link"><h2>Contact</h2></a></div>
        </nav>

    </div>

    <script>
        const cursor = document.getElementById("cursor")
        console.log(cursor)
        
        window.addEventListener('mousemove', (e) => {
            window.requestAnimationFrame(() => {
                cursor.style.left = `${e.pageX}px`;
                cursor.style.top = `${e.pageY}px`;
            });
        })
    </script>
</body>
</html>